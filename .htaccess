# Configuration explicite qui fonctionne sur tous les hébergeurs
Options -Indexes
DirectorySlash Off

RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^(.*)/$ /$1 [R=301,L]

# Règles explicites pour chaque page importante
RewriteRule ^projects$ projects.html [L]

# Règles pour les projets individuels
RewriteRule ^projects/([a-zA-Z0-9-]+)$ projects/$1.html [L]

# Fallback général pour les autres pages
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]
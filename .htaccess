# Explicit configuration that works on all hosts
Options -Indexes
DirectorySlash Off

RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Remove trailing slash from non-root URLs
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^(.*)/$ /$1 [R=301,L]

# Redirect index files to root/directory
RewriteCond %{THE_REQUEST} /index\.html[\s?] [NC]
RewriteRule ^index\.html$ / [R=301,L]
RewriteCond %{THE_REQUEST} /([^/]+)/index\.html[\s?] [NC]
RewriteRule ^([^/]+)/index\.html$ /$1/ [R=301,L]

# Explicit rules for every important page (static SvelteKit)
RewriteRule ^projects$ projects.html [L]

# Rules for individual projects
RewriteRule ^projects/([a-zA-Z0-9-]+)$ projects/$1.html [L]

# General fallback for other pages
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]